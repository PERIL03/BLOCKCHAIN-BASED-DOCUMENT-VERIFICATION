# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# IMPORTANT: Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to git!

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Private key for blockchain transactions
# IMPORTANT: Generate a NEW private key for production! Never use default keys!
# You can generate one at: https://vanity-eth.tk/ or use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PRIVATE_KEY=YOUR_PRODUCTION_PRIVATE_KEY_HERE

# Blockchain RPC URL (Use Infura or Alchemy for production)
# Get free API key from: https://infura.io or https://alchemy.com
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Or for mainnet: https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Sepolia testnet RPC (for testnet deployment)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Blockchain network (sepolia, mainnet, polygon, etc.)
BLOCKCHAIN_NETWORK=sepolia

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB Atlas connection string (REQUIRED for production)
# Get from: https://cloud.mongodb.com
# Format: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/document-verification?retryWrites=true&w=majority

# MongoDB credentials (for reference)
MONGO_USERNAME=YOUR_MONGODB_USERNAME
MONGO_PASSWORD=YOUR_MONGODB_PASSWORD
MONGO_DATABASE=document-verification

# ============================================
# BACKEND API CONFIGURATION
# ============================================

# Server configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=production

# Frontend URL (CORS configuration)
# Examples: 
# - Vercel: https://your-app.vercel.app
# - Railway: https://your-app.railway.app
# - Custom domain: https://yourdomain.com
CLIENT_URL=https://your-frontend-url.vercel.app

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Backend API URL
# Examples:
# - Render: https://your-backend.onrender.com
# - Railway: https://your-backend.railway.app
# - Heroku: https://your-backend.herokuapp.com
REACT_APP_API_URL=https://your-backend-api-url.onrender.com

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Session secret (Generate a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=GENERATE_RANDOM_STRING_HERE

# JWT secret (if implementing authentication)
JWT_SECRET=GENERATE_RANDOM_STRING_HERE

# ============================================
# ETHERSCAN CONFIGURATION
# ============================================

# Etherscan API key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# ============================================
# OPTIONAL SETTINGS
# ============================================

# Gas reporting (set to true for cost analysis)
REPORT_GAS=false

# CoinMarketCap API key (for USD gas estimation)
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Rate limit (requests per 15 minutes)
RATE_LIMIT_MAX=100
