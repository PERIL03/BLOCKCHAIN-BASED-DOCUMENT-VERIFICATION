{
  "name": "blockchain-doc-verify-backend",
  "version": "1.0.0",
  "description": "Backend API for blockchain document verification system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha test/**/*.test.js --timeout 40000 --exit",
    "test:watch": "nodemon --exec \"npm test\"",
    "test:coverage": "nyc npm test",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.js\""
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "document",
    "verification",
    "smart-contract"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "hardhat": "^2.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "nyc": "^15.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
