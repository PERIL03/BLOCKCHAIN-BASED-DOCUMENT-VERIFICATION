# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Private key for blockchain transactions (Hardhat default account #0)
# WARNING: Never use this in production! Generate your own private key.
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Blockchain RPC URL
# For local development (Hardhat node)
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545

# For Sepolia testnet (uncomment and add your Infura/Alchemy key)
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Blockchain network (localhost, sepolia, mainnet, etc.)
BLOCKCHAIN_NETWORK=localhost

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB connection string
# For local MongoDB
MONGODB_URI=mongodb://localhost:27017/document-verification

# For MongoDB Atlas (uncomment and add your connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/document-verification?retryWrites=true&w=majority

# For Docker MongoDB
# MONGODB_URI=mongodb://admin:password123@mongodb:27017/document-verification?authSource=admin

# MongoDB credentials (for Docker)
MONGO_USERNAME=admin
MONGO_PASSWORD=password123
MONGO_DATABASE=document-verification
MONGO_PORT=27017

# ============================================
# BACKEND API CONFIGURATION
# ============================================

# Server port
PORT=5000
HOST=0.0.0.0

# Node environment (development, production, test)
NODE_ENV=development

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# API endpoint
REACT_APP_API_URL=http://localhost:5000

# ============================================
# ETHERSCAN CONFIGURATION (for contract verification)
# ============================================

# Etherscan API key (get from https://etherscan.io/myapikey)
ETHERSCAN_API_KEY=

# ============================================
# GAS REPORTER CONFIGURATION
# ============================================

# Enable gas reporting (true/false)
REPORT_GAS=false

# CoinMarketCap API key (for USD gas cost estimation)
COINMARKETCAP_API_KEY=

# ============================================
# DOCKER CONFIGURATION
# ============================================

# Hardhat node port
HARDHAT_PORT=8545

# Backend port (for Docker)
BACKEND_PORT=5000

# Frontend port (for Docker)
FRONTEND_PORT=3000

# ============================================
# ADDITIONAL SETTINGS
# ============================================

# Session secret (generate a random string for production)
SESSION_SECRET=your-secret-key-here-change-in-production

# JWT secret (if implementing authentication)
JWT_SECRET=your-jwt-secret-here-change-in-production

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Rate limit (requests per 15 minutes)
RATE_LIMIT_MAX=100
