# MongoDB credentials (matches docker-compose.yml)
MONGO_USERNAME=admin
MONGO_PASSWORD=password123
MONGO_DATABASE=document-verification
MONGO_PORT=27017

# ============================================
# BACKEND API CONFIGURATION
