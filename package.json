{
  "name": "blockchain-document-verification",
  "version": "1.0.0",
  "description": "Complete blockchain-based document verification system with Ethereum smart contracts",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../client && npm install",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:backend": "cd backend && npm test",
    "test:client": "cd client && npm test",
    "test:all": "npm test && npm run test:backend",
    "node": "npx hardhat node",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "verify": "npx hardhat verify --network sepolia",
    "backend": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "dev": "concurrently \"npm run node\" \"npm run backend:dev\" \"npm run client\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "seed": "node scripts/seed-database.js",
    "clean": "rm -rf node_modules backend/node_modules client/node_modules artifacts cache",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "pre-deploy": "chmod +x scripts/pre-deploy-check.sh && ./scripts/pre-deploy-check.sh",
    "deploy:vercel": "chmod +x scripts/deploy-vercel.sh && ./scripts/deploy-vercel.sh",
    "deploy:render": "chmod +x scripts/deploy-render.sh && ./scripts/deploy-render.sh",
    "deploy:docker": "chmod +x scripts/deploy-docker.sh && ./scripts/deploy-docker.sh",
    "deployment:checklist": "chmod +x scripts/deployment-checklist.sh && ./scripts/deployment-checklist.sh",
    "generate:secrets": "chmod +x scripts/generate-secrets.sh && ./scripts/generate-secrets.sh",
    "security:fix": "chmod +x scripts/remove-env-from-git.sh && ./scripts/remove-env-from-git.sh",
    "install:client": "cd client && npm install",
    "install:backend": "cd backend && npm install",
    "prepare:deploy": "chmod +x scripts/prepare-deployment.sh && ./scripts/prepare-deployment.sh",
    "build:all": "npm run compile && cd client && npm run build && cd .."
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "document-verification",
    "hardhat",
    "solidity",
    "react",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "hardhat": "^2.19.2",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "mongoose": "^8.19.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/blockchain-document-verification.git"
  }
}
